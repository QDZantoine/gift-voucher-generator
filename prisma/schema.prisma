// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// BetterAuth Models
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  role          String   @default("ADMIN") // ADMIN ou SUPER_ADMIN
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions  Session[]
  accounts  Account[]
  giftCards GiftCard[]
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, value])
}

// Gift Card Models
model GiftCard {
  id              String    @id @default(cuid())
  code            String    @unique // Code unique du bon cadeau
  productType     String // menu influences, menu dégustation, etc. (déprécié, utiliser menuTypeId)
  menuTypeId      String? // ID du type de menu (relation)
  numberOfPeople  Int // Nombre de personnes
  recipientName   String // Nom du destinataire
  recipientEmail  String // Email du destinataire
  purchaserName   String // Nom de l'acheteur
  purchaserEmail  String // Email de l'acheteur
  amount          Float // Montant en euros
  purchaseDate    DateTime  @default(now())
  expiryDate      DateTime // Date d'expiration
  isUsed          Boolean   @default(false)
  usedAt          DateTime? // Date d'utilisation
  createdAt       DateTime  @default(now())
  createdBy       String? // ID de l'admin qui l'a créé (si créé au restaurant)
  createdOnline   Boolean   @default(true) // true si acheté en ligne, false si créé au restaurant
  stripePaymentId String? // ID du paiement Stripe
  emailSent       Boolean   @default(false) // true si l'email a été envoyé
  customMessage   String? // Message personnalisé pour le bon cadeau
  templateId      String? // ID du template PDF utilisé

  user     User?     @relation(fields: [createdBy], references: [id])
  menuType MenuType? @relation(fields: [menuTypeId], references: [id], onDelete: SetNull)

  @@index([code])
  @@index([createdBy])
  @@index([menuTypeId])
}

model ExclusionPeriod {
  id          String   @id @default(cuid())
  name        String // Nom de la période (Noël, Feria de Bayonne, etc.)
  description String? // Description de la période
  startDate   DateTime // Date de début de la période
  endDate     DateTime // Date de fin de la période
  isActive    Boolean  @default(true)
  isRecurring Boolean  @default(false) // Si la période se répète chaque année
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MenuType {
  id          String   @id @default(cuid())
  name        String   @unique // Nom du menu (Menu Influences, Menu Dégustation, etc.)
  description String? // Description du menu
  amount      Float // Prix par personne en euros
  isActive    Boolean  @default(true) // Si le menu est actif et disponible
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  giftCards GiftCard[] // Relation avec les bons cadeaux
}
